# ESLint config
# Currently extends Airbnb's JavaScript styleguide ES6
# https://github.com/airbnb/javascript

{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": 0,
    "no-console": 0,
    "react/prefer-stateless-function": 0,
    "global-require": 0
  },
  "globals" : {
    "document": true,
    "XMLHttpRequest": true,
    "window": true,
    "ES6Promise": true
    }
}
